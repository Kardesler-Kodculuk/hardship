{
    "compilerOptions": {
      "target": "es5",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "noImplicitAny": true,
      "noImplicitThis": true,
      "strictNullChecks": true,
      "jsx": "react-jsx",
      "baseUrl": "./src",
      "paths": {
        "@hardship":[""],
        "@components":["components"],
        "@contexts":["contexts"],
        "@pages":["pages"],
        "@controller":["controller"],
        "@utils":["utils"],
        "@assets": ["assets"],
        "@services": ["services"],
      }
    },
    "include": [
        "src/**/*",
        "test/*"
    ]
  }
  